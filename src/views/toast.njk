{% extends 'layouts/app.njk' %}
{% set page = 'toast.html' %}
{% set page_title = 'Toast Components' %}

{% block content %}
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto">Basic Notification</h2>
            </div>
            <div class="p-5">
                <div class="text-center">
                    <button @click="$dispatch('notice', { type: 'success', message: 'hello world' })"
                        class="btn btn-primary mr-1">
                        Non Sticky Notification
                    </button>
                    <button class="btn btn-primary mt-2 sm:mt-0">
                        Sticky Notification
                    </button>
                </div>
            </div>
        </div>
        <div class="intro-y box mt-5">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto">Success Notification</h2>
            </div>
            <div id="success-notification" class="p-5">
                <div class="preview">
                    <div class="text-center">
                        <div id="success-notification-content" class="toastify-content hidden flex">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24"
                                fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round" class="feather feather-check-circle text-theme-9 text-theme-9">
                                <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
                                <polyline points="22 4 12 14.01 9 11.01"></polyline>
                            </svg>
                            <div class="ml-4 mr-4">
                                <div class="font-medium">Message Saved!</div>
                                <div class="text-gray-600 mt-1"> The message will be sent in 5 minutes. </div>
                            </div>
                        </div>
                        <button id="success-notification-toggle" class="btn btn-primary"> Show Notification
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="intro-y box mt-5">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto"> Notification With Actions </h2>
            </div>
            <div class="p-5 text-center">
                <div id="notification-with-actions-content" class="toastify-content hidden flex">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" fill="none"
                        stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                        class="feather feather-hard-drive">
                        <line x1="22" y1="12" x2="2" y2="12"></line>
                        <path
                            d="M5.45 5.11L2 12v6a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2v-6l-3.45-6.89A2 2 0 0 0 16.76 4H7.24a2 2 0 0 0-1.79 1.11z">
                        </path>
                        <line x1="6" y1="16" x2="6.01" y2="16"></line>
                        <line x1="10" y1="16" x2="10.01" y2="16"></line>
                    </svg>
                    <div class="ml-4 mr-4">
                        <div class="font-medium">Storage Removed!</div>
                        <div class="text-gray-600 mt-1"> The server will restart in 30 seconds, don't make<br>
                            changes during the update process! </div>
                        <div class="font-medium flex mt-1.5">
                            <a class="text-theme-1 dark:text-gray-500" href="">Restart
                                Now</a>
                            <a class="text-gray-600 ml-3" href="">Cancel</a>
                        </div>
                    </div>
                </div>
                <button id="notification-with-actions-toggle" class="btn btn-primary"> Show Notification
                </button>
            </div>
        </div>
    </div>
    <div class="intro-y col-span-12 lg:col-span-6">
        <div class="intro-y box">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto"> Notification With Avatar </h2>
            </div>
            <div class="p-5 text-center">
                <div id="notification-with-avatar-content" class="toastify-content hidden flex">
                    <div class="w-10 h-10 flex-none image-fit rounded-full overflow-hidden"><img
                            alt="Icewall Tailwind HTML Admin Template" src="/img/profile-15.21d0623d.jpg"></div>
                    <div class="ml-4 sm:mr-28">
                        <div class="font-medium">Bruce Willis</div>
                        <div class="text-gray-600 mt-1">See you later! ðŸ˜ƒðŸ˜ƒðŸ˜ƒ</div>
                    </div>
                    <a data-dismiss="notification"
                        class="absolute top-0 bottom-0 right-0 flex items-center px-6 border-l border-gray-200 dark:border-cool-gray-800 font-medium text-theme-1 dark:text-gray-500"
                        href="javascript:;">Reply</a>
                </div>
                <button id="notification-with-avatar-toggle" class="btn btn-primary"> Show Notification
                </button>
            </div>
        </div>
        <div class="intro-y box mt-5">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto"> Notification With Split Buttons </h2>
            </div>
            <div class="p-5">
                <div class="preview">
                    <div class="text-center">
                        <div id="notification-with-split-buttons-content" class="toastify-content hidden flex">
                            <div class="sm:mr-40">
                                <div class="font-medium">Introducing new theme</div>
                                <div class="text-gray-600 mt-1">Release version 2.3.3</div>
                            </div>
                            <div
                                class="absolute top-0 bottom-0 right-0 flex flex-col border-l border-gray-200 dark:border-cool-gray-800">
                                <a class="flex-1 flex items-center justify-center px-6 font-medium text-theme-1 dark:text-gray-500 border-b border-gray-200 dark:border-cool-gray-800"
                                    href="javascript:;">View Details</a>
                                <a data-dismiss="notification"
                                    class="flex-1 flex items-center justify-center px-6 font-medium text-gray-600"
                                    href="javascript:;">Dismiss</a>
                            </div>
                        </div>
                        <button id="notification-with-split-buttons-toggle" class="btn btn-primary"> Show
                            Notification </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="intro-y box mt-5">
            <div class="flex flex-col sm:flex-row items-center p-5 border-b border-gray-200 dark:border-cool-gray-800">
                <h2 class="font-medium text-base mr-auto"> Notification With Buttons Below </h2>
            </div>
            <div class="p-5 text-center">
                <button @click="$dispatch('notice', {
                    type: 'with-button',
                    title: 'Ayu Wahyuni',
                    message: 'Sent you new document',
                })" class="btn btn-primary">
                    Show Notification
                </button>
            </div>
        </div>
    </div>
</div>

<div x-data="toast" x-on:notice.document="createToast($event.detail.type, $event.detail.title, $event.detail.message)"
    class="absolute flex flex-col-reverse top-4 right-4 z-50 space-y-2 overflow-x-hidden">
    <template x-for="(toast, i) in list" :key="i">
        <div x-show="toast.visible" class="flex bg-white" x-transition:enter="transition ease-in duration-300"
            x-transition:enter-start="transform opacity-0 -translate-y-2" x-transition:enter-end="transform opacity-100"
            x-transition:leave="transition ease-out duration-500"
            x-transition:leave-start="transform translate-x-0 opacity-100"
            x-transition:leave-end="transform translate-x-full opacity-0">
            <div x-show="toast.type == 'with-button'" class="toastify-content flex">
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24" fill="none"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="feather feather-file-text">
                    <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                    <polyline points="14 2 14 8 20 8"></polyline>
                    <line x1="16" y1="13" x2="8" y2="13"></line>
                    <line x1="16" y1="17" x2="8" y2="17"></line>
                    <polyline points="10 9 9 9 8 9"></polyline>
                </svg>
                <div class="ml-4 mr-5 sm:mr-20">
                    <div class="font-medium" x-text="toast.title"></div>
                    <div class="text-gray-600 mt-1" x-text="toast.message"></div>
                    <div class="mt-2.5">
                        <a @click="destroyToast(i)" class="btn btn-primary py-1 px-2 mr-2" href="#">
                            Close
                        </a>
                        <a class="btn btn-outline-secondary py-1 px-2" href="#">
                            Preview
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </template>
</div>
{% endblock %}